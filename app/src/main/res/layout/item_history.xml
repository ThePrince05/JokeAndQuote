<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    android:backgroundTint="?attr/colorSurfaceContainerLow"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.MediumComponent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Client Name -->
        <TextView
            android:id="@+id/clientNameText"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name"
            android:textColor="?attr/colorOnSurface"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            android:layout_marginBottom="4dp"
            app:startIconTint="@color/grey"/>

        <!-- Event Name with Icon -->
        <TextView
            android:id="@+id/eventNameText"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_event"
            android:drawablePadding="8dp"
            android:text="Event Name"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"
            app:startIconTint="@color/grey"/>

        <!-- Type Badge -->
        <TextView
            android:id="@+id/typeText"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_badge"
            android:drawablePadding="6dp"
            android:text="Quotation"
            android:textAllCaps="true"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="4dp"
            app:startIconTint="@color/grey"/>

        <!-- Date with Calendar Icon -->
        <TextView
            android:id="@+id/eventDateText"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:text="24 Apr 2025"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"
            app:startIconTint="@color/black"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
